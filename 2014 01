#include <iostream>
using namespace std;
int num(int n) 
{
	if (n >= 3) 
	{
		return 3 * num(n - 1) - num(n - 2);
	}
	else
	{
		return (2 * n + 1);
	}
}
int main() {
	int n = 0 ,a=0;
	cin >> n;
	if (n < 1 || n>20)
	{
		cout << "輸入不符";
		return 0;
	}
	a = num(n);
	cout << a << endl ;
	system("PAUSE");
	return 0;
}
